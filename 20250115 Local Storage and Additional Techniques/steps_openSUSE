lsblk
# add the ZFS repository
sudo zypper addrepo https://download.opensuse.org/repositories/filesystems/15.6/filesystems.repos
# refresh repositories
sudo zypper refresh
# install ZFS
sudo zypper install zfs
# create conf file:
echo "zfs" | sudo tee -a /etc/modules-load.d/zfs.conf
# just in case
echo "allow_unsupported_modules 1" | sudo tee /etc/modprobe.d/10-unsupported-modules.conf
# reboot
sudo reboot